<% content_for(:title, 'Contact Us')%>

<header class="main-header">
  <div class="container">
    <div class="text-center logo no-margin-bottom">
      <a href="index.html"> <%= image_tag 'logo.png'%></a></div>
    <h3 class="color-white text-center ">Contact Us</h3>
    <div class="white-space-50"></div>
  </div>
</header><!-- end main-header -->

<!-- body-content -->
<div class="body-content clearfix" >

  <div class="bg-color1 block-section line-bottom">
    <div class="container">
      <h2 class="text-center">We're here to help in any way we can.<br/>
        <small> Please submit your request below and we'll get back to you shortly.</small></h2>
      <div class="white-space-20"></div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <!-- form contact -->
           <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

              <div class="form-group">
                <label>Email</label>
              <%if user_signed_in?%>
                <%= f.email_field :email ,class:'form-control', value: current_user.email , readonly:'readonly'%>
                    <%else%>
                <%= f.email_field :email ,class:'form-control' %>
              <%end%>
              </div>
              <div class="form-group">
                <label>Subject</label>
                <%= f.text_field :subject, class:'form-control'%>
              </div>
              <div class="form-group">
                <label>Message</label>
                <%= f.text_area :message, class:'form-control', rows:'6'%>
              </div>
              <div class="form-group text-center">
                <div class="white-space-10"></div>
                <%= f.submit 'Send', class:'btn btn-theme btn-lg btn-long btn-t-primary btn-pill'%>
              </div>
              <%end%> <!-- end form contact -->

          <div class="white-space-10"></div>
          <p class="text-center"><span class="span-line">OR</span></p>

          <!-- box with icon -->
          <div class="row">
            <div class="col-md-4">
              <div class="box-ic-center ">
                <i class="fa fa-phone ic-box"></i>
                <h4>Phone</h4>
                <p>+216 20 678 407</p>
              </div>

            </div>
            <div class="col-md-4">
              <div class="box-ic-center ">
                <i class="fa fa-skype ic-box"></i>
                <h4>Skype</h4>
                <p>TechJobs</p>
              </div>

            </div>

            <div class="col-md-4">
              <div class="box-ic-center ">
                <i class="fa fa-home ic-box"></i>
                <h4>Address</h4>
                <p>Tunis, Tunisia</p>
              </div>
            </div>
          </div> <!-- end box with icon -->
          <div class="text-center">
          <h4 ><a href="https://www.google.com/maps/place/Kairouan,+Tunisie/" target="_blank">14 Yahia Ben Omar St. Kairouan , Tunisia 3100</a></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><!--end body-content -->