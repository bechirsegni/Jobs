<% content_for :title do %> <%=@resume.title%> <% end %>
<%= render'resumes/parts/search'%>
<!-- body-content -->
  <div class="body-content clearfix" >
    <!-- link top -->
    <div class="bg-color2 block-section-xs line-bottom">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 hidden-xs">
            <div>Resume details :</div>
          </div>
          <div class="col-sm-6">
            <div class="text-right">
              <%= link_to 'Go back to resume listings', resumes_path %>
            </div>
          </div>
        </div>
      </div>
    </div><!-- end link top -->
    <div class="bg-color2">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <!-- box item details -->
            <div class="block-section box-item-details">
              <div class="resume-block">
                <div class="img-profile">
                  <%= image_tag @resume.user.photo.url%>
                 </div>
                <div class="desc">
                  <h2><%= @resume.user.name%></h2>
                  <h4><%= @resume.title%></h4>
                  <p><%=@resume.location%></p>
                  <p>Skills: <%= raw @resume.skills.map(&:name).map { |t| link_to t, skill_path(t) }.join(', ') %></p>
                  <h3 class="resume-sub-title"><span>Work Experience</span></h3>
                  <h5><%= raw @resume.experience%></h5>
                  <h3 class="resume-sub-title"><span>Education</span></h3>
                  <h5><%=raw  @resume.education%></h5>
                  <h3  class="resume-sub-title"><span>Additional Information</span></h3>
                  <h5><%=raw @resume.information%></h5>
                </div>
              </div>
            </div><!-- end box item details -->
          </div>
          <div class="col-md-3">
            <!-- box affix right -->
            <div class="block-section " id="affix-box">
              <div class="text-right">
                <p>Updated: <%="#{time_ago_in_words(@resume.created_at)} ago"%></p>
                <p><a href="mailto:<%=@resume.user.email%>" class="btn btn-theme btn-t-primary btn-block-xs">Contact <%=@resume.user.name%></a></p>
                <p><%= link_to 'Download This Resume', @resume.cv.url, class:'btn btn-theme btn-t-primary btn-block-xs', target:'_blank'%></p>
                <p>Share This Resume <span class="space-inline-10"></span> :</p>
                <p class="share-btns">
                  <a href="https://www.facebook.com/dialog/feed?app_id=134530986736267&link=<%= request.original_url %>&name=<%= @resume.title%>&picture=<%=image_url(@resume.user.photo)%>&redirect_uri=http://facebook.com/" target="_blank" class="btn btn-primary"><i class="fa fa-facebook"></i></a>
                  <a target="_blank" href="http://twitter.com/home?status=<%=@resume.title%>  &mdash; <%= request.original_url %> via @planetjobs.tn" class="btn btn-info"><i class="fa fa-twitter"></i></a>
                  <a target="_blank" href="https://plus.google.com/share?url=<%= request.original_url %>" class="btn btn-danger"><i class="fa fa-google-plus"></i></a>
                </p>
              </div>
            </div><!-- box affix right -->
          </div>
        </div>
      </div>
    </div>
  </div><!--end body-content -->
