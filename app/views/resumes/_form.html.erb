<header class="main-header">
  <div class="container">
    <div class="text-center logo"> <a href="index.html">
      <%= image_tag 'logo.png'%></a></div>
  </div>
</header><!-- end main-header -->
<!-- body-content -->
<div class="body-content clearfix" >

  <div class="bg-color2 block-section line-bottom">
    <div class="container">
      <h1 class="text-center no-margin">Create Your Resume</h1>
    </div>
  </div>






  <div class="bg-color1 block-section line-bottom">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
<!-- box item details -->
<div class="block-section line-bottom">
  <div class="resume-block">
    <div class="img-profile"><img src="./assets/theme/images/people/7.jpg" alt=""></div>
    <div class="desc">
      <h2><%= current_user.email%></h2>
      <%= form_for @resume, :multipart => true do |f| %>

       <div class="form-group">
      <%= f.label :title%> <br/>
      <%= f.text_field :title, :class => 'form-control' ,placeholder:'EX: Ruby On rails Developer'%>
       </div>
          <div class="form-group">
      <%= f.label :location%> <br/>
      <%= f.text_field :location , :class => 'form-control' ,placeholder:'EX: Kairouan,Tunisia'%>
            </div>
      <h3 class="resume-sub-title"><span>Work Experience</span></h3>
          <div class="form-group">
      <%= f.label :experience%> <br/>
      <%= f.text_area :experience, :class => 'form-control' ,placeholder:'Copy and Paste From your Resume ...'%>
            </div>

      <h3 class="resume-sub-title"><span>Education</span></h3>
      <%= f.label :education%> <br/>
      <%= f.text_area :education , :class => 'form-control' ,placeholder:'Copy and Paste From your Resume ...'%>

      <h3  class="resume-sub-title"><span>Additional Information</span></h3>
          <div class="form-group">
      <%= f.label :information%> <br/>
      <%= f.text_area :information, :class => 'form-control' ,placeholder:'Describe your self and added the skill you have ...'%>
            </div>
    </div>
          <div class="form-group ">
          <%= f.submit 'Submit Your CV', class:'btn btn-t-primary btn-theme'%>
          </div>
<% end %>
</div>
</div><!-- end box item details -->

    </div>
      </div>
    </div>
  </div>
</div>